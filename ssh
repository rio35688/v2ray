# ==================================================
# FIREWALLFALCON - SSH Configuration for Termux
# معدل خصيصاً لـ Termux (بدون أخطاء)
# ==================================================

# الإعدادات الأساسية
Port 8022
Protocol 2
SyslogFacility AUTH
LogLevel INFO

# Host Keys
HostKey /data/data/com.termux/files/usr/etc/ssh/ssh_host_ed25519_key
HostKey /data/data/com.termux/files/usr/etc/ssh/ssh_host_rsa_key

# إعدادات المصادقة
LoginGraceTime 120
PermitRootLogin yes
StrictModes yes
PubkeyAuthentication yes
PasswordAuthentication yes
PermitEmptyPasswords no
ChallengeResponseAuthentication no
IgnoreRhosts yes
HostbasedAuthentication no

# إعدادات البقاء متصلاً
ClientAliveInterval 60
ClientAliveCountMax 3
TCPKeepAlive yes

# إعدادات الجلسات والاتصالات
MaxAuthTries 3
MaxSessions 10
MaxStartups 10:30:60
PermitTunnel yes
AllowTcpForwarding yes
GatewayPorts yes

# إعدادات الأداء
UseDNS no
Compression yes

# إعدادات X11
X11Forwarding yes
X11DisplayOffset 10
PrintMotd no

# البيئة والمسارات
AcceptEnv LANG LC_*
Subsystem sftp /data/data/com.termux/files/usr/libexec/sftp-server

# الشعار (اختياري)
# Banner /etc/bannerssh

# ==================================================
# نهاية ملف الإعدادات المعدل لـ Termux
# ==================================================
