# ==================================================
# FIREWALLFALCON - SSH Configuration for Termux
# معدل ومحسن لدعم V2Ray/X-UI على Termux
# ==================================================

# الإعدادات الأساسية
Port 8022
Protocol 2
KeyRegenerationInterval 3600
ServerKeyBits 1024
SyslogFacility AUTH
LogLevel INFO

# Host Keys (لـ Termux)
HostKey /data/data/com.termux/files/usr/etc/ssh/ssh_host_ed25519_key
HostKey /data/data/com.termux/files/usr/etc/ssh/ssh_host_rsa_key

# إعدادات المصادقة
LoginGraceTime 120
PermitRootLogin yes
StrictModes yes
PubkeyAuthentication yes
PasswordAuthentication yes
PermitEmptyPasswords no
ChallengeResponseAuthentication no

# إعدادات المصادقة القديمة (للتوافق)
RSAAuthentication yes
IgnoreRhosts yes
RhostsRSAAuthentication no
HostbasedAuthentication no

# إعدادات البقاء متصلاً (مهم للـ VPN)
ClientAliveInterval 60
ClientAliveCountMax 3
TCPKeepAlive yes

# إعدادات الجلسات والاتصالات
MaxAuthTries 3
MaxSessions 10
MaxStartups 10:30:60
PermitTunnel yes
AllowTcpForwarding yes
GatewayPorts yes

# إعدادات الأداء
UseDNS no
Compression yes

# إعدادات X11 والبيئة
X11Forwarding yes
X11DisplayOffset 10
PrintMotd no
PrintLastLog yes

# البيئة والمسارات
AcceptEnv LANG LC_*
Subsystem sftp /data/data/com.termux/files/usr/libexec/sftp-server

# الشعار (اختياري - قم بإنشاء الملف إذا أردت)
# Banner /etc/bannerssh

# استخدام PAM (مهم لـ Termux)
UsePAM yes

# ==================================================
# نهاية ملف الإعدادات
# تم التعديل والدمج لدعم V2Ray/X-UI على Termux
# ==================================================
